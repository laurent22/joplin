{
  "name": "@joplin/react-native-saf-x",
  "version": "2.9.0",
  "description": "a module to help work with scoped storages on android easily",
  "main": "src/index",
  "react-native": "src/index",
  "source": "src/index",
  "private": true,
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-saf-x.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "watch": "tsc --watch --preserveWatchOutput --project tsconfig.json",
    "linter-precommit": "yarn --cwd ../../ eslint --resolve-plugins-relative-to . --fix packages/react-native-saf-x/**/*.{js,ts,tsx}",
    "tsc": "tsc --project tsconfig.json"
  },
  "keywords": [
    "react-native",
    "android",
    "scoped-storage",
    "scoped",
    "storage",
    "SAF",
    "storage-access-framework"
  ],
  "author": "Javad Mnjd (https://github.com/jd1378)",
  "license": "MIT",
  "homepage": "",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@types/react": "16.14.21",
    "@types/react-native": "0.64.19",
    "react": "18.2.0",
    "react-native": "0.66.1",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  }
