  proc prefix_query {prefixlist} {
    set ret [list]
    db eval {SELECT rowid, a, b FROM t1 ORDER BY rowid DESC} {
      set bMatch 1
      foreach pref $prefixlist {
        if { [lsearch -glob $a $pref]<0 && [lsearch -glob $b $pref]<0 } {
          set bMatch 0
          break
        }
      }
      if {$bMatch} { lappend ret $rowid }
    }
    return $ret
  }

